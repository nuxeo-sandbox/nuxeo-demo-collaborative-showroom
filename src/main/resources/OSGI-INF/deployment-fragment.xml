<?xml version="1.0"?>
<fragment version="1">
  <require>org.nuxeo.ecm.platform.lang</require>
  <install>
    <delete path="showroom_app.tmp" />
    <mkdir path="showroom_app.tmp" />
    <unzip from="${bundle.fileName}" to="showroom_app.tmp" />
    <append from="showroom_app.tmp/OSGI-INF/l10n/messages_en_US.properties" to="nuxeo.war/WEB-INF/classes/messages.properties"
      addNewLine="true" />
    <append from="showroom_app.tmp/OSGI-INF/l10n/messages_en_US.properties" to="nuxeo.war/WEB-INF/classes/messages_en.properties"
      addNewLine="true" />
    <append from="showroom_app.tmp/OSGI-INF/l10n/messages_en_US.properties" to="nuxeo.war/WEB-INF/classes/messages_en_US.properties"
      addNewLine="true" />
    <append from="showroom_app.tmp/OSGI-INF/l10n/messages_fr_FR.properties" to="nuxeo.war/WEB-INF/classes/messages_fr_FR.properties"
      addNewLine="true" />
    <append from="showroom_app.tmp/OSGI-INF/l10n/messages_fr_FR.properties" to="nuxeo.war/WEB-INF/classes/messages_fr.properties"
      addNewLine="true" />
    <delete path="showroom_app.tmp" />
  </install>
</fragment>
